# ============================================================
# P2P Procurement System -- Environment Variables Template
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.
# This file uses Laravel's naming conventions.
# ============================================================

# ------------------------------------------------------------
# APPLICATION (Laravel)
# ------------------------------------------------------------
APP_NAME="P2P Procurement System"
APP_ENV=local
APP_KEY=                         # Run: php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost:8000

# ------------------------------------------------------------
# DATABASE -- MySQL 8.0+
# Create DB with: CREATE DATABASE p2p_procurement
#   CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
# ------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=p2p_procurement
DB_USERNAME=p2p_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ------------------------------------------------------------
# AUTHENTICATION -- Laravel Sanctum
# Sanctum is configured in config/sanctum.php
# ------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:5173
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Sanctum token expiry (in minutes; null = never expires)
SANCTUM_TOKEN_EXPIRATION=1440    # 24 hours

# ------------------------------------------------------------
# EMAIL -- SMTP (Phase 1 Default)
# Microsoft 365: MAIL_HOST=smtp.office365.com MAIL_PORT=587
# Google Workspace: MAIL_HOST=smtp.gmail.com MAIL_PORT=587
# ------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.yourprovider.com
MAIL_PORT=587
MAIL_USERNAME=notifications@yourcompany.com
MAIL_PASSWORD=CHANGE_ME_APP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=notifications@yourcompany.com
MAIL_FROM_NAME="P2P Procurement System"

# ------------------------------------------------------------
# OBJECT STORAGE -- S3-Compatible (Phase 1 Default)
# Works with: AWS S3, MinIO, Cloudflare R2,
#             DigitalOcean Spaces, Backblaze B2
# ------------------------------------------------------------
FILESYSTEM_DISK=s3

AWS_ACCESS_KEY_ID=CHANGE_ME_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_SECRET_KEY
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=p2p-attachments
AWS_URL=                         # Optional: CDN or custom domain URL
AWS_ENDPOINT=                    # Leave blank for AWS; set for MinIO/R2/DO
AWS_USE_PATH_STYLE_ENDPOINT=false # Set true for MinIO

# ------------------------------------------------------------
# QUEUE -- Laravel Queues (database driver for Phase 1)
# Run: php artisan queue:table && php artisan migrate
# Run queue worker: php artisan queue:work
# ------------------------------------------------------------
QUEUE_CONNECTION=database

# ------------------------------------------------------------
# CACHE & SESSION
# ------------------------------------------------------------
CACHE_STORE=database
SESSION_DRIVER=database

# ------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ------------------------------------------------------------
# FRONTEND (React/Vite) -- set in frontend/.env
# VITE_API_URL=http://localhost:8000/api
# ------------------------------------------------------------

# ------------------------------------------------------------
# PHASE 2 (FUTURE -- leave blank for now)
# ------------------------------------------------------------
