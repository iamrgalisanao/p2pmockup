APP_NAME="P2P Procurement System"
APP_ENV=production
APP_KEY=  # Generate this using 'php artisan key:generate' on the server
APP_DEBUG=false
APP_URL=https://app.abbadev.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=p2p_production
DB_USERNAME=p2p_user
DB_PASSWORD=            # Set a secure password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Sanctum / CORS
STATEFUL_DOMAINS=app.abbadev.com
SANCTUM_STATEFUL_DOMAINS=app.abbadev.com

# Mail Configuration (Example SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@abbadev.com"
MAIL_FROM_NAME="${APP_NAME}"
